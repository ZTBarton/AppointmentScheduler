@{
    ViewData["Title"] = "Appointment List";
}



@model List<Appt>


<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Group Name</td>
            <td>Group Size</td>
            <td>Email</td>
            <td>Phone</td>
        </tr>
    </thead>

    <tbody>

        @foreach (var x in Model)
        {
            <tr>
                <td>@x.GroupName</td>
                <td>@x.GroupSize</td>
                <td>@x.Email</td>
                <td>@x.GroupPhone</td>


                @*<td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.ApptId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.ApptId">Delete</a></td>*@
            </tr>
        }
    </tbody>
</table>